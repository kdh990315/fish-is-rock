{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:vue/vue3-recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "parser": "@typescript-eslint/parser"
  },
  "rules": {
    "prettier/prettier": "error", // Prettier와 통합
    "no-console": "warn", // 개발 중 console 사용을 경고
    "no-debugger": "warn", // 개발 중 debugger 사용을 경고
    "no-var": "error", // var 대신 let/const 사용을 권장
    "prefer-const": "error", // 변경되지 않는 변수는 const로 선언
    "eqeqeq": ["error", "always"], // == 대신 === 사용을 강제
    "consistent-return": "error", // 함수에서 일관된 반환 값을 요구
    "array-callback-return": "error", // 배열 메소드에서 반환값을 강제
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }], // 사용하지 않는 변수 경고, 언더스코어로 시작하는 인자는 제외
    "no-undef": "error", // 정의되지 않은 변수를 사용하지 않도록 함
    "prefer-template": "error", // 문자열 연결 대신 템플릿 리터럴 사용을 강제
    "vue/no-unused-vars": "warn", // 사용하지 않는 Vue 컴포넌트 변수를 경고
    "vue/max-attributes-per-line": ["error", { "singleline": 3, "multiline": 1 }] // 한 줄에 최대 속성 개수 제한
  }
}
